<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.vcss_c"/>
		<include src="file://{resources}/styles/custom_game/custom_loading_screen.css"/>
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/api.js"/>
		<include src="file://{resources}/scripts/custom_game/custom_loading_screen.js"/>
	</scripts>

	<Panel class="addon-root">
		<Panel id="imba-loading">
			<Panel id="imba-loading-title">
				<Panel class="down">
					<Label id="imba-loading-title-text" text="Dota IMBA 8.0 - Leaked EarthSalamander sextape"/>
					<Label id="imba-loading-map-text" text="Loading ..."/>
					<Label id="imba-loading-content-text" html="true" text="Loading ..." />
					<Button id="imba-loading-link" onactivate="link_clicked();">
						<Label id="imba-loading-link-text" text="Loading ..." />
					</Button>
				</Panel>
			</Panel>

			<Panel id="ImbaLoadingSocial">
				<Panel class="Row">
					<Button id="ImbaLoadingSocialOfficialWebsite" class="SocialButtons" onactivate="DOTADisplayURL('https://preview.dota2imba.org/statistics/rankings');">
						<Label text="Official Website" />
					</Button>
					<Button id="ImbaLoadingSocialSteamChat" class="SocialButtons" onactivate="DOTADisplayURL('https://s.team/chat/OgFfP2Rx');">
						<Label text="Official Steam Chat" />
					</Button>
					<Button id="ImbaLoadingSocialFacebook" class="SocialButtons" onactivate="DOTADisplayURL('https://www.facebook.com/D2IMBA/');">
						<Label text="Facebook" />
					</Button>
					<Button id="ImbaLoadingSocialTwitter" class="SocialButtons" onactivate="DOTADisplayURL('https://twitter.com/dota2imba');">
						<Label text="Twitter" />
					</Button>
					<Button id="ImbaLoadingSocialDiscordEn" class="SocialButtons" onactivate="DOTADisplayURL('http://tinyurl.com/imba-discord');">
						<Label text="English Discord" />
					</Button>
					<Button id="ImbaLoadingSocialDiscordRu" class="SocialButtons" onactivate="DOTADisplayURL('https://discord.gg/HcybJKt');">
						<Label text="Русский Дискорд" />
					</Button>
				</Panel>
			</Panel>

			<Panel id="imba-loading-title-promote">
				<Panel class="down">
					<Label id="imba-loading-title-text-promote" text="#loading_screen_promote"/>
					<Label id="imba-loading-content-text-promote" html="true" text="#loading_screen_promote_description" />
					<Button id="imba-loading-link-promote" onactivate="DOTADisplayURL('https://www.transifex.com/dota-imba/dota-imba/dashboard/');">
						<Label id="imba-loading-link-text-promote" text="#loading_screen_promote_button" />
					</Button>
				</Panel>
			</Panel>

			<Panel id="imba-loading-title-patreon">
				<Panel class="down">
					<Label id="imba-loading-title-text-patreon" text="#loading_screen_patreon"/>
					<Label id="imba-loading-content-text-patreon" html="true" text="#loading_screen_patreon_description" />
					<Button id="imba-loading-link-patreon" onactivate="DOTADisplayURL('https://www.patreon.com/bePatron?u=2533325');">
					</Button>
				</Panel>
			</Panel>
